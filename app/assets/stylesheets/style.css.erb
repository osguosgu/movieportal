/* content boxes */
.widget {
  position: relative;
  background: rgba(50,50,50,0.4);
  font-size: 12px;
  margin-bottom: 20px;
  padding: 10px 12px;
  color: #f8f8f8;
  -webkit-border-radius: 1px;
  -moz-border-radius: 1px;
  -ms-border-radius: 1px;
  -o-border-radius: 1px;
  border-radius: 1px;
}

.widget .media-object {
  margin-right: 10px;
  margin-bottom: 10px;
}

.widget .media-body.movie {
  min-height: 150px;
}

.widget h3 {
}

.widget-alert {
  /*background: rgba(30,156,137,0.5)*/
  padding: 20px;
  font-size: 24px;
  font-weight: 300;
}
.btn-default {
  border: 1px solid #fff;
}

/* movie listing display selector */
.display-mode {
  font-size: 14px;
  font-weight: 600;
  color: #fff;
  display: inline;
}
.display-mode .btn-group {
  margin-left: 10px;
}
.display-mode .btn-default {
  background: rgba(51,51,51,0.4);
  border: 0;
  color: rgba(255,255,255,0.5);
}
.display-mode .btn-default:hover {
  background: rgba(51,51,51,0.5);
  border: 0;
  color: #fff;
}
.display-mode .active, .display-mode .active:hover {
  background: rgba(51,51,51,0.8);
  border: 0;
  color: #fff;
}

.display-mode .form-control {
  width: auto;
  display: inline-block;
  margin-right: 10px;
  background: rgba(51,51,51,0.4);
  border-radius: 0;
  border: 0;
  color: #fff;
}

.widget .media-list > li:hover {
  background: rgba(51,51,51,0.25);
}
.widget .media-list > li {
  -webkit-box-sizing: content-box;
  -moz-box-sizing: content-box;
  box-sizing: content-box;
  border-top: 1px solid rgba(51,51,51,0.25);
  padding: 12px;
  margin: 0 -12px;
  cursor: pointer;
  -webkit-transition: background-color 0.2s ease-out;
  -moz-transition: background-color 0.2s ease-out;
  -o-transition: background-color 0.2s ease-out;
  transition: background-color 0.2s ease-out;
}

